{
    "category": "Configuration - Implicit Multiplication",
    "description": "Tests implicit multiplication when enabled and disabled",
    "tests": [
        {
            "id": "implicit_mult_enabled_001",
            "input": "x := 5; 2x",
            "expected": 10.0,
            "expectedType": "NodeDouble",
            "config": {
                "implicitMultiplication": true
            },
            "notes": "2x works when implicit multiplication enabled"
        },
        {
            "id": "implicit_mult_disabled_001",
            "input": "x := 5; 2x",
            "expectError": true,
            "config": {
                "implicitMultiplication": false
            },
            "notes": "2x produces error when implicit multiplication disabled"
        },
        {
            "id": "implicit_mult_enabled_002",
            "input": "x := 3; y := 4; xy",
            "expected": 12.0,
            "expectedType": "NodeDouble",
            "config": {
                "implicitMultiplication": true
            },
            "notes": "xy works when implicit multiplication enabled"
        },
        {
            "id": "implicit_mult_disabled_002",
            "input": "x := 3; y := 4; xy",
            "expectError": true,
            "config": {
                "implicitMultiplication": false
            },
            "notes": "xy produces error when implicit multiplication disabled"
        },
        {
            "id": "implicit_mult_enabled_paren_001",
            "input": "2(3 + 4)",
            "expected": 14.0,
            "expectedType": "NodeDouble",
            "config": {
                "implicitMultiplication": true
            },
            "notes": "2(expression) works when implicit multiplication enabled"
        },
        {
            "id": "implicit_mult_disabled_paren_001",
            "input": "2(3 + 4)",
            "expectError": true,
            "config": {
                "implicitMultiplication": false
            },
            "notes": "2(expression) produces error when implicit multiplication disabled"
        },
        {
            "id": "implicit_mult_enabled_const_001",
            "input": "2pi",
            "expected": 6.283185307179586,
            "expectedType": "NodeDouble",
            "config": {
                "implicitMultiplication": true
            },
            "notes": "2pi works when implicit multiplication enabled"
        },
        {
            "id": "implicit_mult_disabled_const_001",
            "input": "2pi",
            "expectError": true,
            "config": {
                "implicitMultiplication": false
            },
            "notes": "2pi produces error when implicit multiplication disabled"
        },
        {
            "id": "implicit_mult_disabled_explicit_works_001",
            "input": "x := 5; 2*x",
            "expected": 10.0,
            "expectedType": "NodeDouble",
            "config": {
                "implicitMultiplication": false
            },
            "notes": "Explicit multiplication 2*x still works when implicit disabled"
        },
        {
            "id": "implicit_mult_disabled_explicit_works_002",
            "input": "2 * (3 + 4)",
            "expected": 14.0,
            "expectedType": "NodeDouble",
            "config": {
                "implicitMultiplication": false
            },
            "notes": "Explicit multiplication 2*(expression) still works when implicit disabled"
        },
        {
            "id": "implicit_mult_enabled_complex_001",
            "input": "x := 2; y := 3; z := 4; xyz",
            "expected": 24.0,
            "expectedType": "NodeDouble",
            "config": {
                "implicitMultiplication": true
            },
            "notes": "Multiple variable implicit multiplication xyz works"
        },
        {
            "id": "implicit_mult_enabled_function_001",
            "input": "x := pi/2; 2sin(x)",
            "expected": 2.0,
            "expectedType": "NodeDouble",
            "config": {
                "implicitMultiplication": true
            },
            "notes": "Implicit multiplication with function call 2sin(x) works"
        }
    ]
}
